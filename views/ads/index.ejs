<%- include("../partials/header") %>

    <style>
        body {
            background: linear-gradient(135deg, #f3e5f5 0%, #ffffff 50%, #e1bee7 100%);
            background-attachment: fixed;
            font-family: 'Poppins', sans-serif;
        }

        .hero {
            background: linear-gradient(135deg, rgba(142, 36, 170, 0.95), rgba(171, 71, 188, 0.9)),
                        url("https://images.unsplash.com/photo-1556909114-5ba5c9d2f137?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            color: white;
            padding: 80px 20px;
            text-align: center;
            border-radius: 30px;
            margin: 20px auto 60px;
            box-shadow: 0 20px 60px rgba(142, 36, 170, 0.4);
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: 'üõçÔ∏è';
            position: absolute;
            top: -30px;
            right: -30px;
            font-size: 150px;
            opacity: 0.15;
            animation: rotate 20s linear infinite;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
        }

        .hero p {
            font-size: 1.3rem;
            opacity: 0.95;
        }

        .section-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 30px;
            padding: 40px;
            margin: 40px auto;
            box-shadow: 0 25px 60px rgba(142, 36, 170, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            position: relative;
            overflow: hidden;
        }

        .section-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(142, 36, 170, 0.03) 0%, transparent 70%);
            animation: float 8s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-10px) rotate(180deg); }
        }

        .section-content {
            position: relative;
            z-index: 2;
        }

        .section-title {
            font-weight: 700;
            font-size: 2rem;
            margin-bottom: 30px;
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(45deg, #8e24aa, #ba68c8);
            border-radius: 2px;
        }

        .form-label {
            color: #7b1fa2;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 15px;
            border: 2px solid #e1bee7;
            padding: 12px 18px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(5px);
        }

        .form-control:focus {
            border-color: #8e24aa;
            box-shadow: 0 0 0 0.2rem rgba(142, 36, 170, 0.25);
            background: white;
            transform: translateY(-2px);
        }

        .btn-premium {
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            border: none;
            color: white;
            font-weight: 700;
            padding: 12px 25px;
            border-radius: 20px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(142, 36, 170, 0.3);
        }

        .btn-premium:hover {
            background: linear-gradient(45deg, #ab47bc, #8e24aa);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(142, 36, 170, 0.4);
        }

        .ads-table {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .ads-table thead {
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            color: white;
        }

        .ads-table thead th {
            font-weight: 600;
            padding: 18px 15px;
            border: none;
            text-align: center;
        }

        .ads-table tbody td {
            padding: 15px;
            border: none;
            border-bottom: 1px solid rgba(142, 36, 170, 0.1);
            vertical-align: middle;
        }

        .ads-table tbody tr:hover {
            background: rgba(142, 36, 170, 0.05);
            transform: scale(1.01);
            transition: all 0.3s ease;
        }

        .logo-img {
            height: 60px;
            width: 60px;
            object-fit: cover;
            border-radius: 50%;
            box-shadow: 0 5px 15px rgba(142, 36, 170, 0.3);
            transition: transform 0.3s ease;
        }

        .logo-img:hover {
            transform: scale(1.1);
        }

        .visit-btn {
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            border: none;
            color: white;
            padding: 8px 16px;
            border-radius: 15px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .visit-btn:hover {
            background: linear-gradient(45deg, #ab47bc, #8e24aa);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(142, 36, 170, 0.3);
        }

        .delete-btn {
            background: linear-gradient(45deg, #e91e63, #f06292);
            border: none;
            color: white;
            padding: 8px 16px;
            border-radius: 15px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .delete-btn:hover {
            background: linear-gradient(45deg, #f06292, #e91e63);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(233, 30, 99, 0.3);
        }

        .no-ads {
            background: linear-gradient(135deg, #e1bee7 0%, #f3e5f5 100%);
            color: #7b1fa2;
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            font-weight: 600;
            border: 2px solid rgba(142, 36, 170, 0.2);
        }

        .no-ads-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            display: block;
        }

        /* Form grid improvements */
        .form-row {
            background: rgba(142, 36, 170, 0.05);
            padding: 25px;
            border-radius: 20px;
            border: 2px solid rgba(142, 36, 170, 0.1);
        }

        /* Date inputs styling */
        input[type="date"] {
            background: rgba(255, 255, 255, 0.9);
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.2rem;
            }
            
            .section-container {
                margin: 20px;
                padding: 25px;
            }
            
            .form-row {
                padding: 20px;
            }
        }
    </style>

    <div class="container py-4">
        <!-- Hero Section -->
        <div class="hero">
            <div class="hero-content">
                <h1>üõçÔ∏è Premium Pet Shops</h1>
                <p>Discover trusted local pet brands & exclusive sponsors</p>
            </div>
        </div>

        <!-- Add New Ad Section -->
        <div class="section-container">
            <div class="section-content">
                <h3 class="section-title">üìù Add New Sponsored Ad</h3>
                
                <div class="form-row">
                    <form action="/ads" method="POST">
                        <div class="row gy-3 gx-4 align-items-end">
                            <div class="col-md-3">
                                <label class="form-label">üè™ Shop Name</label>
                                <input type="text" name="shopName" class="form-control" placeholder="Pet Care Hub" required>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">üñºÔ∏è Logo URL</label>
                                <input type="url" name="logoUrl" class="form-control" placeholder="https://example.com/logo.png" required>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">üîó Shop Website</label>
                                <input type="url" name="link" class="form-control" placeholder="https://petshop.com" required>
                            </div>

                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-6">
                                        <label class="form-label">üìÖ Start Date</label>
                                        <input type="date" name="startsOn" class="form-control" required>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label">ÔøΩÔøΩÔøΩ End Date</label>
                                        <input type="date" name="endsOn" class="form-control" required>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <button type="submit" class="btn btn-premium w-100">
                                        ‚ú® Add Campaign
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Ads List Section -->
        <div class="section-container">
            <div class="section-content">
                <h3 class="section-title">üè™ Active Sponsored Ads</h3>
                
                <% if (ads.length === 0) { %>
                    <div class="no-ads">
                        <span class="no-ads-icon">üõçÔ∏è</span>
                        <h4>No sponsored ads available yet</h4>
                        <p>Be the first to add your pet shop advertisement!</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table ads-table">
                            <thead>
                                <tr>
                                    <th>üè™ Shop</th>
                                    <th>üñºÔ∏è Logo</th>
                                    <th>üîó Website</th>
                                    <th>üìÖ Start Date</th>
                                    <th>üìÖ End Date</th>
                                    <th>‚ö° Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% ads.forEach(ad => { %>
                                    <tr>
                                        <td class="fw-bold text-dark">
                                            <%= ad.shopName %>
                                        </td>
                                        <td class="text-center">
                                            <img src="<%= ad.logoUrl %>" class="logo-img" alt="<%= ad.shopName %> Logo">
                                        </td>
                                        <td class="text-center">
                                            <a href="<%= ad.link %>" class="visit-btn" target="_blank">
                                                üåê Visit Shop
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <%= ad.startsOn ? ad.startsOn.toDateString() : "N/A" %>
                                        </td>
                                        <td class="text-center">
                                            <%= ad.endsOn ? ad.endsOn.toDateString() : "N/A" %>
                                        </td>
                                        <td class="text-center">
                                            <form action="/ads/<%= ad._id %>?_method=DELETE" method="POST" style="display: inline;">
                                                <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this ad?')">
                                                    üóëÔ∏è Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>

<%- include("partials/header") %>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            background: linear-gradient(135deg, #f3e5f5 0%, #ffffff 50%, #e1bee7 100%);
            background-attachment: fixed;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        /* Floating paw prints animation */
        .paw-print {
            position: fixed;
            font-size: 2rem;
            color: rgba(156, 39, 176, 0.1);
            pointer-events: none;
            animation: float 6s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        .hero-section {
            background: linear-gradient(135deg, rgba(156, 39, 176, 0.95), rgba(123, 31, 162, 0.9)),
                        url("https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            padding: 100px 20px;
            color: white;
            border-radius: 30px;
            margin: 20px auto 60px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(156, 39, 176, 0.4);
        }

        .hero-section::before {
            content: "üêæ";
            position: absolute;
            top: -50px;
            right: -50px;
            font-size: 200px;
            opacity: 0.15;
            color: rgba(255, 255, 255, 0.3);
            animation: rotate 20s linear infinite;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            animation: slideInDown 1s ease-out;
        }

        .hero-subtitle {
            font-size: 1.4rem;
            font-weight: 300;
            margin-bottom: 30px;
            animation: slideInUp 1s ease-out 0.3s both;
        }

        @keyframes slideInDown {
            from { opacity: 0; transform: translateY(-50px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideInUp {
            from { opacity: 0; transform: translateY(50px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .action-buttons {
            margin-top: 30px;
            animation: fadeIn 1s ease-out 0.6s both;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .hero-btn {
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            border: none;
            padding: 18px 35px;
            border-radius: 50px;
            color: white;
            font-weight: 700;
            font-size: 1.2rem;
            margin: 0 15px;
            box-shadow: 0 15px 40px rgba(142, 36, 170, 0.5);
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            position: relative;
            overflow: hidden;
        }

        .hero-btn:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 20px 50px rgba(142, 36, 170, 0.7);
            color: white;
        }

        .hero-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.6s;
        }

        .hero-btn:hover::before {
            left: 100%;
        }

        .report-btn-special {
            background: linear-gradient(45deg, #7b1fa2, #8e24aa) !important;
            animation: pulse-purple 2s infinite;
            border: 3px solid rgba(255, 255, 255, 0.3) !important;
        }

        .adopt-btn-special {
            background: linear-gradient(45deg, #9c27b0, #ba68c8) !important;
            animation: pulse-light-purple 2s infinite 0.5s;
            border: 3px solid rgba(255, 255, 255, 0.3) !important;
        }

        @keyframes pulse-purple {
            0% { box-shadow: 0 0 0 0 rgba(123, 31, 162, 0.7); }
            70% { box-shadow: 0 0 0 15px rgba(123, 31, 162, 0); }
            100% { box-shadow: 0 0 0 0 rgba(123, 31, 162, 0); }
        }

        @keyframes pulse-light-purple {
            0% { box-shadow: 0 0 0 0 rgba(156, 39, 176, 0.7); }
            70% { box-shadow: 0 0 0 15px rgba(156, 39, 176, 0); }
            100% { box-shadow: 0 0 0 0 rgba(156, 39, 176, 0); }
        }

        .section-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 30px;
            padding: 40px 30px;
            margin: 40px auto;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .section-heading {
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 40px;
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            position: relative;
        }

        .section-heading::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(45deg, #8e24aa, #ba68c8);
            border-radius: 2px;
        }

        .animal-card {
            background: white;
            border-radius: 25px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: none;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            position: relative;
            margin-bottom: 30px;
        }

        .animal-card::before {
            content: 'üíñ';
            position: absolute;
            top: 15px;
            right: 15px;
            z-index: 3;
            font-size: 1.5rem;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .animal-card:hover::before {
            opacity: 1;
            transform: scale(1.2);
        }

        .animal-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
        }

        .animal-card .card-img-top {
            height: 250px;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .animal-card:hover .card-img-top {
            transform: scale(1.1);
        }

        .animal-card .card-body {
            padding: 25px;
            background: linear-gradient(135deg, #8e24aa 0%, #ba68c8 100%);
            color: white;
        }

        .animal-card .card-title {
            font-weight: 600;
            font-size: 1.3rem;
            margin-bottom: 15px;
        }

        .animal-card .card-text {
            font-size: 1rem;
            line-height: 1.6;
            opacity: 0.9;
        }

        .adopt-btn {
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            border: none;
            padding: 12px 25px;
            border-radius: 25px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .adopt-btn:hover {
            background: linear-gradient(45deg, #ab47bc, #8e24aa);
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(142, 36, 170, 0.4);
            color: white;
        }

        .ad-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            position: relative;
        }

        .ad-card::before {
            content: 'üõçÔ∏è';
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 2;
            font-size: 1.2rem;
            background: rgba(255, 255, 255, 0.9);
            padding: 5px 8px;
            border-radius: 10px;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .ad-card:hover::before {
            opacity: 1;
        }

        .ad-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .ad-card .card-img-top {
            height: 200px;
            object-fit: contain;
            background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
            padding: 20px;
            transition: transform 0.3s ease;
        }

        .ad-card:hover .card-img-top {
            transform: scale(1.05);
        }

        .ad-card .card-body {
            padding: 20px;
            background: linear-gradient(135deg, #e1bee7 0%, #ce93d8 100%);
        }

        .ad-card .card-title {
            font-weight: 600;
            color: #2c3e50;
            font-size: 1.1rem;
        }

        .stats-section {
            background: linear-gradient(135deg, #8e24aa 0%, #ab47bc 100%);
            color: white;
            padding: 60px 30px;
            border-radius: 30px;
            margin: 60px auto;
            text-align: center;
            box-shadow: 0 20px 60px rgba(142, 36, 170, 0.3);
        }

        .stat-item {
            padding: 20px;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            display: block;
            margin-bottom: 10px;
            color: #ffffff;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .stat-label {
            font-size: 1.2rem;
            opacity: 0.9;
        }

        .floating-action-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(45deg, #7b1fa2, #8e24aa);
            border: 3px solid rgba(255, 255, 255, 0.3);
            color: white;
            font-size: 2.2rem;
            box-shadow: 0 15px 40px rgba(123, 31, 162, 0.5);
            transition: all 0.3s ease;
            z-index: 1000;
            animation: pulse-purple 2s infinite;
        }



        .floating-action-btn:hover {
            transform: translateY(-8px) scale(1.15);
            box-shadow: 0 20px 50px rgba(123, 31, 162, 0.7);
        }

        .no-content {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .no-content-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .section-heading {
                font-size: 2rem;
            }
        }
    </style>

    <!-- Floating paw prints for ambient animation -->
    <div class="paw-print" style="top: 10%; left: 10%; animation-delay: 0s;">üêæ</div>
    <div class="paw-print" style="top: 20%; right: 20%; animation-delay: 1s;">üêæ</div>
    <div class="paw-print" style="bottom: 30%; left: 15%; animation-delay: 2s;">üêæ</div>
    <div class="paw-print" style="bottom: 10%; right: 10%; animation-delay: 3s;">üêæ</div>

    <div class="container">
        <!-- Hero Section -->
        <div class="hero-section">
            <div class="hero-content text-center">
                <h1 class="hero-title">Welcome to StrayCare üêæ</h1>
                <p class="hero-subtitle">Giving hope, health, and homes to street animals in need</p>
                <div class="action-buttons">
                    <a href="/report/new" class="hero-btn report-btn-special">üì∏ Report a Stray</a>
                    <a href="/adoption" class="hero-btn adopt-btn-special">üíñ Adopt Now</a>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-section">
            <div class="row">
                <div class="col-md-4">
                    <div class="stat-item">
                        <span class="stat-number">üêï <%= animals.length %></span>
                        <span class="stat-label">Animals Treated</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <span class="stat-number">üè™ <%= ads.length %></span>
                        <span class="stat-label">Partner Shops</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-item">
                        <span class="stat-number">üíù 500+</span>
                        <span class="stat-label">Lives Saved</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recently Treated Animals Section -->
        <div class="section-container">
            <h2 class="section-heading">üåü Recently Treated Animals</h2>

            <% if (animals.length === 0) { %>
                <div class="no-content">
                    <div class="no-content-icon">üêæ</div>
                    <h4>No treated animals to display yet</h4>
                    <p>Be the first to report a stray animal in need!</p>
                </div>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% animals.forEach(function(animal) { %>
                        <div class="col">
                            <div class="card animal-card h-100">
                                <img src="<%= animal.afterPhotoUrl %>" class="card-img-top" alt="Treated Animal">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= animal.adoptable ? "üè† Ready for Adoption!" : "‚ú® Treated & Healthy" %>
                                    </h5>
                                    <p class="card-text"><%= animal.healthNotes %></p>
                                </div>
                                <% if (animal.adoptable) { %>
                                    <div class="card-footer bg-transparent border-0 text-center">
                                        <a href="/adoption" class="adopt-btn">üíï View for Adoption</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <!-- Sponsored Pet Shops Section -->
        <div class="section-container">
            <h2 class="section-heading">üõçÔ∏è Sponsored Pet Shops</h2>

            <% if (ads.length === 0) { %>
                <div class="no-content">
                    <div class="no-content-icon">üè™</div>
                    <h4>No partner shops to show right now</h4>
                    <p>We're working on bringing you the best pet supplies!</p>
                </div>
            <% } else { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% ads.forEach(function(ad) { %>
                        <div class="col">
                            <div class="card ad-card h-100">
                                <a href="<%= ad.link %>" target="_blank" style="text-decoration: none;">
                                    <img src="<%= ad.logoUrl %>" class="card-img-top" alt="<%= ad.shopName %> Logo">
                                    <div class="card-body text-center">
                                        <h5 class="card-title"><%= ad.shopName %></h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Floating Action Button -->
    <button class="floating-action-btn" onclick="window.location.href='/report/new'" title="Report a Stray Animal">
        üì¢
    </button>

<%- include("partials/footer") %>

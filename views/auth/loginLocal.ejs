<%- include("../partials/header") %>

    <style>
        body {
            background: linear-gradient(135deg, #f3e5f5 0%, #ffffff 50%, #e1bee7 100%);
            background-attachment: fixed;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
        }

        .login-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 25px 60px rgba(142, 36, 170, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            width: 100%;
            max-width: 480px;
            position: relative;
            overflow: hidden;
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(142, 36, 170, 0.05) 0%, transparent 70%);
            animation: float 6s ease-in-out infinite;
        }

        .login-content {
            position: relative;
            z-index: 2;
        }

        .login-title {
            font-size: 2rem;
            font-weight: 700;
            color: #8e24aa;
            text-align: center;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .login-subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
            font-size: 1rem;
        }

        .form-label {
            color: #7b1fa2;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 15px;
            border: 2px solid #e1bee7;
            padding: 12px 20px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(5px);
        }

        .form-control:focus {
            border-color: #8e24aa;
            box-shadow: 0 0 0 0.2rem rgba(142, 36, 170, 0.25);
            background: white;
            transform: translateY(-2px);
        }

        .login-btn {
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            border: none;
            padding: 15px 30px;
            border-radius: 25px;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(142, 36, 170, 0.3);
            position: relative;
            overflow: hidden;
        }

        .login-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s;
        }

        .login-btn:hover::before {
            left: 100%;
        }

        .login-btn:hover {
            background: linear-gradient(45deg, #ab47bc, #8e24aa);
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(142, 36, 170, 0.4);
        }

        .register-link {
            text-align: center;
            margin-top: 25px;
            color: #666;
        }

        .register-link a {
            color: #8e24aa;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .register-link a:hover {
            color: #ab47bc;
            text-decoration: underline;
        }

        .login-icon {
            font-size: 4rem;
            text-align: center;
            margin-bottom: 20px;
            display: block;
            animation: bounce 2s infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .login-card {
                margin: 20px;
                padding: 30px 25px;
            }
            
            .login-title {
                font-size: 1.7rem;
            }
        }
    </style>

    <div class="login-container">
        <div class="login-card">
            <div class="login-content">
                <!-- Icon -->
                <div class="login-icon">üêæ</div>
                
                <!-- Title -->
                <h3 class="login-title">Welcome Back!</h3>
                <p class="login-subtitle">Sign in to help more animals in need</p>

                <!-- Login Form -->
                <form action="/auth/login/local" method="POST">
                    <div class="mb-3">
                        <label class="form-label">üìß Email Address</label>
                        <input name="email" type="email" class="form-control" placeholder="Enter your email"
                            required>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">üîí Password</label>
                        <input name="password" type="password" class="form-control" placeholder="Enter your password"
                            required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="login-btn">
                            üöÄ Sign In
                        </button>
                    </div>
                </form>

                <!-- Register Prompt -->
                <div class="register-link">
                    Don't have an account?
                    <a href="/auth/register/local">Create one here</a>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>

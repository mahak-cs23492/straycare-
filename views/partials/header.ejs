<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>StrayCare - Helping Paws in Need üêæ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="StrayCare - A digital platform helping stray animals find love, care, and homes">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom Theme CSS -->
    <link rel="stylesheet" href="/css/theme.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        /* Enhanced Navbar Styles */
        .navbar-custom {
            background: linear-gradient(135deg, rgba(142, 36, 170, 0.95), rgba(171, 71, 188, 0.95)) !important;
            backdrop-filter: blur(15px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px rgba(142, 36, 170, 0.2);
            padding: 15px 0;
        }

        .navbar-brand {
            font-size: 1.8rem !important;
            font-weight: 700 !important;
            color: #fff !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .navbar-brand:hover {
            color: #ffd93d !important;
            transform: scale(1.05);
        }

        .navbar-brand::before {
            content: "üêæ";
            margin-right: 8px;
            font-size: 1.5rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-5px); }
            60% { transform: translateY(-3px); }
        }

        .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            padding: 10px 15px !important;
            border-radius: 25px;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            margin: 0 5px;
            position: relative;
        }

        .navbar-nav .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background: linear-gradient(45deg, #ff6b6b, #ffd93d);
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .navbar-nav .nav-link:hover {
            color: #ffffff !important;
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .navbar-nav .nav-link:hover::before {
            width: 80%;
        }

        .report-btn {
            background: linear-gradient(45deg, #7b1fa2, #8e24aa) !important;
            color: #fff !important;
            font-weight: 700 !important;
            padding: 12px 24px !important;
            border-radius: 25px !important;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(123, 31, 162, 0.4);
            border: 2px solid rgba(255, 255, 255, 0.3);
            position: relative;
            overflow: hidden;
            animation: pulse-report 2s infinite;
        }

        .report-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s;
        }

        .report-btn:hover::before {
            left: 100%;
        }

        .report-btn:hover {
            color: #fff !important;
            transform: translateY(-5px) scale(1.08);
            box-shadow: 0 15px 35px rgba(123, 31, 162, 0.6);
            border-color: rgba(255, 255, 255, 0.5);
        }

        @keyframes pulse-report {
            0% { box-shadow: 0 8px 20px rgba(123, 31, 162, 0.4), 0 0 0 0 rgba(123, 31, 162, 0.7); }
            70% { box-shadow: 0 8px 20px rgba(123, 31, 162, 0.4), 0 0 0 10px rgba(123, 31, 162, 0); }
            100% { box-shadow: 0 8px 20px rgba(123, 31, 162, 0.4), 0 0 0 0 rgba(123, 31, 162, 0); }
        }

        .nav-highlight {
            position: relative;
        }

        .nav-highlight.active {
            background: rgba(255, 255, 255, 0.2);
            color: #ffd93d !important;
        }

        .navbar-toggler {
            border: none !important;
            background: rgba(255, 255, 255, 0.1) !important;
            border-radius: 10px !important;
            padding: 8px 12px !important;
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25) !important;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.9%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        }

        .dropdown-menu {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px) !important;
            border: 1px solid rgba(255, 255, 255, 0.2) !important;
            border-radius: 15px !important;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15) !important;
            margin-top: 10px !important;
        }

        .dropdown-item {
            color: #333 !important;
            padding: 12px 20px !important;
            border-radius: 10px !important;
            margin: 5px 10px !important;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .dropdown-item:hover {
            background: linear-gradient(45deg, #667eea, #764ba2) !important;
            color: #fff !important;
            transform: translateX(5px);
        }

        .user-greeting {
            background: rgba(255, 255, 255, 0.15) !important;
            border-radius: 20px !important;
            padding: 8px 15px !important;
            color: #ffd93d !important;
            font-weight: 600;
            backdrop-filter: blur(10px);
        }

        .logout-btn {
            color: #ff6b6b !important;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .logout-btn:hover {
            color: #fff !important;
            background: linear-gradient(45deg, #ff6b6b, #e83e8c) !important;
            transform: translateY(-2px);
        }

        /* Enhanced Flash Messages */
        .alert {
            border-radius: 15px !important;
            border: none !important;
            padding: 20px 25px !important;
            margin: 20px 0 !important;
            backdrop-filter: blur(10px) !important;
            position: relative;
            overflow: hidden;
            font-weight: 500;
        }

        .alert::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: currentColor;
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.9), rgba(32, 201, 151, 0.9)) !important;
            color: #fff !important;
            border-left: 4px solid #28a745;
        }

        .alert-success::after {
            content: "‚úÖ";
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.9), rgba(232, 62, 140, 0.9)) !important;
            color: #fff !important;
            border-left: 4px solid #dc3545;
        }

        .alert-danger::after {
            content: "‚ö†Ô∏è";
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
        }

        .alert-warning {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.9), rgba(253, 126, 20, 0.9)) !important;
            color: #212529 !important;
            border-left: 4px solid #ffc107;
        }

        .alert-warning::after {
            content: "‚ö°";
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
        }

        .alert-info {
            background: linear-gradient(135deg, rgba(23, 162, 184, 0.9), rgba(102, 126, 234, 0.9)) !important;
            color: #fff !important;
            border-left: 4px solid #17a2b8;
        }

        .alert-info::after {
            content: "üí°";
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.2rem;
        }

        .btn-close {
            background: none !important;
            color: currentColor !important;
            opacity: 0.8 !important;
            filter: none !important;
        }

        .btn-close:hover {
            opacity: 1 !important;
            transform: scale(1.1);
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.5rem !important;
            }
            
            .navbar-nav .nav-link {
                margin: 5px 0;
                text-align: center;
            }
            
            .report-btn {
                margin: 10px 0 !important;
                display: block !important;
                text-align: center !important;
            }
        }
    </style>
</head>

<body>
    <!-- Enhanced Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">StrayCare</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link nav-highlight" href="/">üè† Home</a>
                    </li>

                    <% if (currentUserKind === "LOCAL") { %>
                        <li class="nav-item">
                            <a class="nav-link report-btn" href="/report/new">üì¢ Report a Stray</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" href="/user/dashboard">üìã My Reports</a>
                        </li>
                    <% } %>

                    <li class="nav-item">
                        <a class="nav-link nav-highlight" href="/adoption">üè† Adopt</a>
                    </li>

                    <% if (currentUserKind === "NGO") { %>
                        <li class="nav-item">
                            <a class="nav-link nav-highlight" href="/ngo/dashboard">üè¢ NGO Panel</a>
                        </li>
                    <% } %>

                    <% if (userName) { %>
                        <li class="nav-item">
                            <span class="nav-link user-greeting">Hi, <%= userName %> üëã</span>
                        </li>
                    <% } %>

                    <% if (!currentUserId) { %>
                        <!-- Login Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle nav-highlight" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                üîê Login
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/auth/login/local">üë§ User Login</a></li>
                                <li><a class="dropdown-item" href="/auth/login/ngo">üè¢ NGO Login</a></li>
                            </ul>
                        </li>

                        <!-- Register Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle nav-highlight" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                üìù Register
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/auth/register/local">üë§ User Register</a></li>
                                <li><a class="dropdown-item" href="/auth/register/ngo">üè¢ NGO Register</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link logout-btn" href="/auth/logout">üö™ Logout</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Enhanced Flash Messages -->
    <div class="container mt-3">
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Oops!</strong> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>

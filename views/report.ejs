<%- include("partials/header") %>

    <style>
        body {
            background: linear-gradient(135deg, #f3e5f5 0%, #ffffff 50%, #e1bee7 100%);
            background-attachment: fixed;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
        }

        .report-container {
            padding: 40px 0;
        }

        .hero-section {
            background: linear-gradient(135deg, rgba(142, 36, 170, 0.95), rgba(171, 71, 188, 0.9)),
                        url("https://images.unsplash.com/photo-1601758228041-f3b2795255f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80") center/cover no-repeat;
            padding: 60px 20px;
            color: white;
            border-radius: 30px;
            margin: 20px auto 40px;
            text-align: center;
            box-shadow: 0 20px 60px rgba(142, 36, 170, 0.4);
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: #ffffff;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.95;
            margin-bottom: 0;
        }

        .form-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 30px;
            padding: 40px;
            box-shadow: 0 25px 60px rgba(142, 36, 170, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            position: relative;
            overflow: hidden;
        }

        .form-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(142, 36, 170, 0.03) 0%, transparent 70%);
            animation: float 8s ease-in-out infinite;
        }

        .form-content {
            position: relative;
            z-index: 2;
        }

        .form-section-title {
            color: #8e24aa;
            font-weight: 700;
            font-size: 1.4rem;
            margin-bottom: 25px;
            text-align: center;
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-label {
            color: #7b1fa2;
            font-weight: 600;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .form-label i {
            margin-right: 8px;
            font-size: 1.1rem;
        }

        .form-control, textarea {
            border-radius: 15px;
            border: 2px solid #e1bee7;
            padding: 15px 20px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(5px);
        }

        .form-control:focus, textarea:focus {
            border-color: #8e24aa;
            box-shadow: 0 0 0 0.25rem rgba(142, 36, 170, 0.25);
            background: white;
            transform: translateY(-2px);
        }

        #map {
            height: 350px;
            border-radius: 20px;
            border: 3px solid #e1bee7;
            box-shadow: 0 15px 35px rgba(142, 36, 170, 0.2);
            overflow: hidden;
        }

        .map-instruction {
            background: linear-gradient(135deg, #e1bee7 0%, #f3e5f5 100%);
            color: #7b1fa2;
            padding: 15px 20px;
            border-radius: 15px;
            margin-bottom: 15px;
            font-weight: 500;
            text-align: center;
            border: 2px solid rgba(142, 36, 170, 0.2);
        }

        .submit-btn {
            background: linear-gradient(45deg, #8e24aa, #ab47bc);
            border: none;
            padding: 18px 40px;
            border-radius: 25px;
            color: white;
            font-weight: 700;
            font-size: 1.2rem;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 15px 40px rgba(142, 36, 170, 0.4);
            position: relative;
            overflow: hidden;
            margin-top: 20px;
        }

        .submit-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s;
        }

        .submit-btn:hover::before {
            left: 100%;
        }

        .submit-btn:hover {
            background: linear-gradient(45deg, #ab47bc, #8e24aa);
            transform: translateY(-5px);
            box-shadow: 0 20px 50px rgba(142, 36, 170, 0.5);
        }

        .input-group {
            margin-bottom: 25px;
        }

        .donation-info {
            background: linear-gradient(135deg, rgba(142, 36, 170, 0.1), rgba(171, 71, 188, 0.1));
            padding: 20px;
            border-radius: 15px;
            margin-top: 10px;
            border: 2px solid rgba(142, 36, 170, 0.2);
        }

        .donation-info p {
            margin: 0;
            color: #7b1fa2;
            font-size: 0.9rem;
            text-align: center;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-10px) rotate(180deg); }
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .form-card {
                margin: 20px;
                padding: 30px 25px;
            }
            
            .hero-title {
                font-size: 2rem;
            }
            
            #map {
                height: 250px;
            }
        }
    </style>

    <div class="container report-container">
        <!-- Hero Section -->
        <div class="hero-section">
            <h1 class="hero-title">Report a Street Animal üì∏</h1>
            <p class="hero-subtitle">Help us help them - Every report can save a life</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="form-card">
                    <div class="form-content">
                        <h3 class="form-section-title">üêæ Animal Report Form</h3>

                        <form action="/report" method="POST" enctype="multipart/form-data">
                            <div class="input-group">
                                <label for="photo" class="form-label">
                                    üì∑ Upload Animal Photo
                                </label>
                                <input type="file" class="form-control" name="photo" accept="image/*" required>
                            </div>

                            <div class="input-group">
                                <label for="description" class="form-label">
                                    üìù Animal Condition & Description
                                </label>
                                <textarea class="form-control" name="description" rows="4"
                                    placeholder="Please describe the animal's condition, behavior, and any visible injuries or health concerns..."></textarea>
                            </div>

                            <div class="input-group">
                                <label for="donationIntent" class="form-label">
                                    üí∞ Donation Offer (‚Çπ)
                                </label>
                                <input type="number" class="form-control" name="donationIntent" min="0"
                                    placeholder="Optional - Amount you can contribute for treatment">
                                <div class="donation-info">
                                    <p>üí° Your donation helps cover medical treatment, food, and care for the rescued animal</p>
                                </div>
                            </div>

                            <input type="hidden" name="lat" id="lat">
                            <input type="hidden" name="lng" id="lng">

                            <div class="input-group">
                                <label class="form-label">
                                    üìç Mark Animal Location on Map
                                </label>
                                <div class="map-instruction">
                                    üìå Click on the map to pinpoint exactly where you found the animal
                                </div>
                                <div id="map"></div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="submit-btn">
                                    üöÄ Submit Report & Help Animal
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Leaflet JS + CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <script>
        const map = L.map('map').setView([28.6139, 77.2090], 13); // Default location: Delhi, India

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        let marker;

        map.on('click', function (e) {
            const { lat, lng } = e.latlng;
            document.getElementById('lat').value = lat;
            document.getElementById('lng').value = lng;

            if (marker) {
                marker.setLatLng(e.latlng);
            } else {
                marker = L.marker(e.latlng).addTo(map)
                    .bindPopup('üìç Animal found here')
                    .openPopup();
            }
        });

        // Try to get user's current location
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                const lat = position.coords.latitude;
                const lng = position.coords.longitude;
                map.setView([lat, lng], 15);
            });
        }
    </script>

    <%- include("partials/footer") %>
